{
  "compilerOptions": {
      "target": "ES2020",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": [
      "src/**/*",
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "internal/**/*",
      "extras/**/*"
  ]
}
